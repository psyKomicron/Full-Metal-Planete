<UserControl x:Class="Full_Metal_Planete.src.user_controls.GameStatsDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Full_Metal_Planete.src.user_controls"
             mc:Ignorable="d" Height="60" Width="236"
             x:Name="control">
    <StackPanel Background="Black" Opacity="0.7">
        <StackPanel Orientation="Horizontal">
            <Label x:Name="_textSpaceship" 
               Content="Spaceships owned :"
               Foreground="Orange"/>
            <Label x:Name="_spaceshipsNumber"
                   Foreground="Orange"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label x:Name="_textAction"
                   Content="Action points left :"
                   Foreground="Orange"/>
            <Label x:Name="_actionPoints"
               Foreground="Orange"/>
        </StackPanel>
    </StackPanel>
</UserControl>
