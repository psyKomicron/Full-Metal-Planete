using FullMetalPlaneteDAL;
using Metier;
using Metier.Carte.Cases;
using Metier.Unites;
using System.Windows.Controls;
using System.Windows.Media.Imaging;

namespace Full_Metal_Planete.src.decorators.factory
{
    public class UnitHMIFactory
    {
        public static UnitIHM BuildUnitHMI(TypeEntite type, Case position, Joueur j, FileLoader fileLoader)
        {
            UnitIHM unit = new UnitIHM(FabriqueUnite.CreeUnite(type, position, j));
            switch (type)
            {
                case TypeEntite.ASTRONEF:
                    unit.Image = new Image() 
                    { 
                        Source = new BitmapImage(fileLoader.GetUri("astronef.png")),
                    };
                    break;
                case TypeEntite.BARGE:
                    unit.Sprite = new BitmapImage(fileLoader.GetUri("barge.png"));
                    break;
                case TypeEntite.TANK:
                    unit.Sprite = new BitmapImage(fileLoader.GetUri("tank.png"));
                    break;
                case TypeEntite.CRABE:
                    unit.Sprite = new BitmapImage(fileLoader.GetUri("Crab3.png"));
                    break;
                case TypeEntite.GROS_TAS:
                    unit.Sprite = new BitmapImage(fileLoader.GetUri("big_tank.png"));
                    break;
                case TypeEntite.PONDEUSE:
                    unit.Sprite = new BitmapImage(fileLoader.GetUri("weather_layer.png"));
                    break;
                case TypeEntite.TOURELLE:
                    unit.Sprite = new BitmapImage(fileLoader.GetUri("time.png"));
                    break;
                case TypeEntite.VEDETTE:
                    unit.Sprite = new BitmapImage(fileLoader.GetUri("boat.png"));
                    break;
            }
            unit.Image.Height = unit.Height;
            unit.Image.Width = unit.Width;
            return unit;
        }
    }
}
