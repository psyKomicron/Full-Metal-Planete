<Window x:Class="Full_Metal_Planete.src.game.menus.CreditsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Full_Metal_Planete.src.game.menus"
        mc:Ignorable="d"
        Title="CreditsWindow" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <Grid>
        <MediaElement 
            x:Name="media"
            Source="src/files/media/credits.mp4" 
            LoadedBehavior="Manual"
            Stretch="Fill"/>
        <Button
            x:Name="btnOk"
            Content="OK"
            Click="BtnOk_Click"
            Margin="676,368,0,0"
            Width="100" 
            Height="40"
            BorderBrush="White"
            BorderThickness="2"
            Background="Transparent"/>
    </Grid>
</Window>
